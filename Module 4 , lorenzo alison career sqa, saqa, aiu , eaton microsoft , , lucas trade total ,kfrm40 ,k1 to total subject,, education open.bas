    v5 = "FWD=1, REV=0"
    WriteLogicRow "MotorCtrl", "Forward_Interlock", eq5, v5, "BOOL", CStr(EvalBoolExpr(eq5, v5))

    Dim eq6$, v6$
    eq6 = "(STAR AND NOT DELTA) OR (TIMER_ELAPSED AND DELTA AND NOT STAR)"
